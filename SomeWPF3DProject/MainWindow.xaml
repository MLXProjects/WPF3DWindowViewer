<Window x:Class="SomeWPF3DProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="455.144" Width="562.38">
    <Grid x:Name="gridMain">
        <Viewport3D Margin="0,0,10,79">
            <Viewport3D.Camera>
                <PerspectiveCamera Position="0, 0, 4"/>
            </Viewport3D.Camera>
            <Viewport2DVisual3D x:Name="v2dv3d">
                <Viewport2DVisual3D.Material>
                    <DiffuseMaterial Viewport2DVisual3D.IsVisualHostMaterial="True" Brush="White"/>
                </Viewport2DVisual3D.Material>
            </Viewport2DVisual3D>
            <ModelVisual3D>
                <ModelVisual3D.Content>
                    <AmbientLight Color="White"/>
                </ModelVisual3D.Content>
            </ModelVisual3D>
        </Viewport3D>
        <Slider x:Name="slider" Margin="265,0,10,10" Maximum="90" ValueChanged="Slider_ValueChanged" Minimum="-90" Height="45" VerticalAlignment="Bottom"/>
        <TextBox x:Name="tb" HorizontalAlignment="Left" Height="23" Margin="32,370,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="84"/>
        <ComboBox x:Name="winList" HorizontalAlignment="Left" Margin="121,370,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="winList_SelectionChanged"/>
    </Grid>
</Window>
